<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.govind.nicappnew.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="fill_parent"
       android:orientation="vertical">


   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
       android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:src="@drawable/apanakhata_01"
        app:srcCompat="@drawable/common_full_open_on_phone"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_weight="1"
        />
      <!-- <ImageView
           android:id="@+id/imageView1"
           android:layout_width="fill_parent"
           android:layout_height="match_parent"
           android:layout_alignParentTop="true"
           android:src="@drawable/apanakhata_master"
           app:srcCompat="@drawable/common_full_open_on_phone"
           tools:layout_editor_absoluteY="0dp"
           tools:layout_editor_absoluteX="0dp"
           android:layout_weight="1"


           />-->
    </LinearLayout>
       <ProgressBar
           android:id="@+id/simpleProgressBar"
           style="@style/Widget.AppCompat.ProgressBar.Horizontal"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:max="100"
           android:progress="0"
           android:progressDrawable="@drawable/custom_progress" />
    <Spinner
        android:id="@+id/spinnerDistrict"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext"
        android:padding="8dp"
        android:textSize="25sp"
            />
    <Spinner
        android:id="@+id/spinnerTehsil"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext"
        android:padding="8dp"
        android:textSize="25sp"
        />
    <Spinner
        android:id="@+id/spinnerVillage"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext"
        android:padding="8dp"
        android:textSize="25sp"
        />
     <Button
        android:id="@+id/getkhata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="खाता चुने"
        android:textSize="18dp"
        android:clickable="true"
        android:onClick="GetKhata"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        />
    <Button
        android:id="@+id/getkhasara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="खसरा चुने"
        android:textSize="18dp"
        android:clickable="true"
        android:onClick="GetKhasara"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        />
    <Button
        android:id="@+id/getkhastkar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="कास्तकार चुने"
        android:textSize="18dp"
        android:clickable="true"
        android:onClick="GetOwnerInfo"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        />

   </LinearLayout>
    </ScrollView>
</LinearLayout>
